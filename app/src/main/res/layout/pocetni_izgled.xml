<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".PocetniActivity">

    <fragment
        android:id="@+id/bosanski"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></fragment>

    <Button
        android:id="@+id/engleskitranslate"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="@font/chivo"
        android:text="English"
        app:backgroundTint="#2596BE"
        app:layout_constraintBottom_toTopOf="@+id/bosanski"
        app:layout_constraintEnd_toStartOf="@+id/bosanskitranslate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bosanskitranslate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/asap"
        android:text="Bosanski"
        app:backgroundTint="#2596BE"
        app:layout_constraintBottom_toTopOf="@+id/bosanski"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/engleskitranslate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>