<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProvjeraKorisnika">

    <TextView
        android:id="@+id/objasnjenje_bolovanje"
        android:layout_width="331dp"
        android:layout_height="118dp"
        android:gravity="center"
        android:text="@string/provjera_bolesti"
        android:textSize="18sp"
        android:fontFamily="@font/asap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.579" />

    <EditText
        android:id="@+id/bolujem_od"
        android:layout_width="320dp"
        android:layout_height="59dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:fontFamily="@font/asap"
        android:text="@string/bolest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345" />

    <TextView
        android:id="@+id/naslov_da_li_bolujete"
        android:layout_width="244dp"
        android:layout_height="115dp"
        android:gravity="center"
        android:text="@string/da_li_bolujete"
        android:textColor="@color/teal_700"
        android:fontFamily="@font/asap"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <Button
        android:id="@+id/bolovanje_submit"
        android:layout_width="333dp"
        android:layout_height="62dp"
        android:text="@string/btn_provjera_bolesti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.813" />
</androidx.constraintlayout.widget.ConstraintLayout>